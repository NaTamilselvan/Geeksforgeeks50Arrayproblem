public class Peakelment1{
public static int  findPeak(int a[],int n){

if(n==1)
return 0;
else if(a[0]>a[i+1]){
return 0;
}
else if(a[n-1]>a[n-2]){
return n-1;
}
for(int i=1;i<a.length;i++){

if( (a[i-1]<a[i]) && a[i+1]<a[i]){
return i;
}

}
return 0;
}
public static void main(String[] args){

int a[]={2,2,2,2,4,4,43,21};

int n=a.length;
findPeak(a,n);

}
}
